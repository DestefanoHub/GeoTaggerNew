<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".HomeActivity" >

    <TableRow
        android:id="@+id/headerBar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/paheheader_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/pageheader" >

        <TextView
            android:id="@+id/home_homeLbl"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Welcome"
            android:textColor="@android:color/white"
            android:textSize="@dimen/pageheader_textsize"
            android:textStyle="bold"
            android:typeface="sans" />
    </TableRow>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/headerBar"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight=".5"
            android:gravity="center"
            android:weightSum="1" >

            <Button
                android:id="@+id/home_btnMyTags"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="5dp"
                android:layout_weight=".5"
                android:background="@drawable/greenbutton"
                android:text="My Tags"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/home_btnAddTag"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight=".5"
                android:background="@drawable/greenbutton"
                android:text="Add Tag"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_weight=".5"
            android:gravity="center"
            android:weightSum="1" >

            <Button
                android:id="@+id/home_btnFriends"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="5dp"
                android:layout_weight=".5"
                android:background="@drawable/greenbutton"
                android:text="Friends"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/home_btnProfile"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight=".5"
                android:background="@drawable/greenbutton"
                android:text="Profile"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>